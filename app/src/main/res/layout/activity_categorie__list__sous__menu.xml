<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorie_Type_Sous_Menu">

    <TextView
        android:id="@+id/Text_View_Sous_Menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Les Types De Chaque Categorie"
        android:textColor="#000000"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_type_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:isScrollContainer="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20sp"
        android:visibility="gone"
        android:src="@drawable/ic_add"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:onClick="Ajouter_sous_menu"
        android:text="Ajouter un Type"
        android:textSize="20sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>